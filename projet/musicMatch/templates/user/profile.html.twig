{% extends "layout.html.twig" %}

{% block title 'profile' %}

{% block content %}
    <div class="container">
        <h1>{{ profile.username }}</h1>
        <h4>Vos informations :</h4>
        <ul>
            <li>{{ profile.email }}</li>
            <li>{{ profile.registerDate }}</li>
            <img src='{{ profile.picture }}'>
        </ul>
        <a href="{{ path('edit', {username: profile.username}) }}">Modifier votre profil</a>
  
    </div>
{% endblock %}
