{% extends "layout.html.twig" %}

{% block title article.title %}

{% block content %}
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="page-header">
                        <h1>{{ article.title }}</h1>
                    </div>
                    <img src="http://cdn2-europe1.new2.ladmedia.fr/var/europe1/storage/images/europe1/sport/foot-une-superligue-europeenne-est-ce-credible-2667823/25729087-1-fre-FR/Foot-une-Superligue-europeenne-est-ce-credible.jpg" alt="" class="Responsive image" width="800">
                    <h3>{{ article.header }}</h3>
                    <p>Categorie :
                        <a href="{{ path('category', {category : article.categoryName }) }}"><small class="label label-primary">{{ article.categoryName }}</small></a>
                    </p>
                    <p>{{ article.content }}</p>
                </div>
            </div>
            <div class="page-header">
                <h2>Commentaires (3)</h2>
            </div>
            <div class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" src="http://www.journaldugeek.com/files/2014/04/infographie_profil_internautes_europ%C3%A9ens-600x375.jpg" alt="" width="64" height="64">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">Larson</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolor dolores eaque est facilis illo magnam mollitia nam numquam, officia perferendis praesentium quaerat repellat reprehenderit suscipit vero. Enim facilis neque sequi.</p>
                </div>
            </div>
            <div class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" src="https://pixabay.com/get/eb36b5062afc093ed1534705fb0938c9bd22ffd41cb1104993f0c479af/profile-2349288_1920.jpg" alt="" width="64" height="64">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">grolland</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolor dolores eaque est facilis illo magnam mollitia nam numquam, officia perferendis praesentium quaerat repellat reprehenderit suscipit vero. Enim facilis neque sequi.</p>
                </div>
            </div><!-- media -->
            <div class="page-header">
                <h3>Nouveau Commentaire</h3>
            </div>
            <form action="">
                <div class="form-group">
                    <textarea class="form-control" name="" id="" cols="30" rows="7"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
        </div><!-- col-9 -->

        <div class="col-md-3">
            <div class="page-header">
                <h2>Autres Articles</h2>
            </div>
            {% for article in articles %}
            <a href="{{ path('article', { id: article.id}) }}">
                <div class="thumbnail">
                    <img src="http://www.actu-malin.fr/wp-content/uploads/2014/10/voyage.jpg" alt="" class="Responsive image" >
                    <div class="caption">
                        <h3>{{ article.title[:40] }}...</h3>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}